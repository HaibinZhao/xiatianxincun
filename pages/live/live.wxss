/**seeting.wxss**/
body{
  margin:0;
  padding:0;
}
.myMedia{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.noplay{
  position: relative;
  width: 100%;
  top:0;
  height: 400rpx;
}
.noplay image{
  position: relative;
  width: 100%;
  height:100%;
  opacity: 0.3;
}
.noplay view{
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 1.2rem;
  top: 180rpx;
  color:#333333;
}



video{
  position: relative;
}
.live_area{
  position: relative;
  margin-top: 30rpx;
}
.live_txt_area{
  position: relative;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-around;
}
.live_txt_area .txt{
  width: 600rpx;
  border: 1px solid #dbdbdb;
  color:#bdbdbd;
  word-wrap: break-word;
}


