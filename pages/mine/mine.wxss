/* pages/areadyBuy/areadyBuy.wxss */
body{
  margin: 0;
  padding: 0;
}
.page{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0%;
  top: 0%;
}
.img_video{
  position: absolute;
  bottom:20rpx;
  left: 20rpx;
  z-index:1;
  width: 48rpx;
  height: 48rpx;

}
.title{
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  text-indent: 32rpx;
  border-top: 1px solid #EDEDED;
  background: #FFFFFF;
}
.upanddown{
  position: relative;
  float: right;
  margin-top: 15rpx;
  margin-right: 32rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
}
.upanddown image{
  width: 100%;
  height: 100%;
}
.turndown{
  position: absolute;
}
.page_show{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #EDEDED;
}
.choose_button_area{
  width: 100%;
  height: 9%;
  border-top: 1px solid #eeeeee;
  border-bottom: 2px solid #EDEDED;
  display: flex;
  justify-content: space-around;
  align-items: center;
    letter-spacing: 2rpx;
  background: #FFFFFF;
}

.btn_area{
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0.9rem;
  color: #333333;
}
.choose_button_underline{
  width: 25%;
  height: 4px;
}


.choose_button{
  width: 100%;
  height: 50%;
  font-size: 30rpx;
  color: #333333 ;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.background_buy{
  width: 99%;
  margin-left: 0.5%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start; 
  background: #eeeeee;
}

.first_loading{
  background: white;
}
.page_area{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: flex-start; 
}
.have_none{
  font-size: 1rem;
  color: red;
}
.none{
  width: 100%;
  font-size: 1rem;
  display: flex;
  justify-content: center;
}
.box{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #EDEDED;
}
.box:after{
  content:'';
  width: 49%;
  /* flex:auto; */
}
.img_background{
  position: relative;
  width: 49%;
  display: flex;
  margin: 10rpx 0;
}
.img_area{
  width: 100%;
  border-radius: 10px;
  height: 300rpx;
} 
.img_area_noDo{
  width: 70%;
  height: 56%;
  margin-left: 17%;
}
.video_icon{
  width: 25%;
  height: 25%;
  position: absolute;
  left: 10%;
  bottom: 10%;
  z-index: 10;
  border-radius: 5px;
}
.choose_img{
  width: 20%;
  height: 20%;
  position: absolute;
  right: 10px;
  bottom: 10px;
}
.show_img{
  width: 100%;
  height: 100%; 
}



.tittle{
  width: 100%;
  height: 8%;
  padding-left: 5px;
  display: flex;
  align-items: center;
  font-size: 1rem;
  color: black;
}  

.scroll_not_buy{
  width: 100%;
  height: 92%;
  position: relative;
  background: white;
}

.show_icon{
  width: 40%;
  margin-top: 30%; 
  margin-left: 33%;
}
.show_input{
  width: 100%;
  margin-top: 10px;
  display: block;
}
.text_1{
  font-size: 1rem;
  color: #666666;
  text-align: center;
}
.text_2{
  margin-top: 3px;
  font-size: 0.7rem;
  color: #999999;
  text-align: center;
}


.holder_words{
  text-align: center;
  padding-right: 5px;
}


.downFresh{
  width: 100%;
  height: 8%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.8rem;
  color: #666666;

  /* background: #eeeeee; */
  animation: showDownFresh;
  animation-duration: 0.2s;
  animation-timing-function: linear;
  animation-iteration-count: 1;
}
@keyframes showDownFresh{
  0%{height: 0%;transform: scale(0); }20%{height: 1%; transform: scale(0.2);}40%{height: 3%;transform: scale(0.4);}60%{height: 4%;transform: scale(0.6);}80%{height: 6%;transform: scale(0.8);}100%{height: 8%;transform: scale(1);}
}

.loading_area_img{
  width: 30px;
  height: 20px;
}

.waitting_product{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: #999999;
  opacity: 0.1
}
.waitting_show_area{
  width: 70%;
  height: 50%;
  background: #f9f9f9;
  position: absolute;
  left: 15%;
  top: 25%;
  z-index: 10;
  border-radius: 20px; 
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  font-size: 0.9rem;
  color: #999999;


}
.toldText{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.toldWaite{
  width: 100px;
  height: 110px;
  margin-top: 20px;
}
.toldKown{
  width: 90%;
  height: 25px;
  line-height: 25px;
  text-align: right;
  color: #30BEFF;
}

.abort{
  position: absolute;
 width: 100%;
 height: 300rpx;
 left: 0%;
 top: 0%;
 border-radius: 10px;
 text-align: center;
 background-color: rgba(128,128,128,.7);
 letter-spacing: 4rpx;
 font-size: 0.8rem;
}

.info{
  position:fixed;
  bottom:0;
  width: 100%;
  background: rgba(0,0,0,.5);
  color: #ffffff;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
