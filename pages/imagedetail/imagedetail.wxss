.btn_area{
  position: absolute;
  bottom: 0;
  width:100%;
  height:120rpx;
  display: flex;
  align-items: center;
  flex-direction:row;
  justify-content: space-around;
  border-top: 1px solid #dbdbdb;
}
.icon_carts{
  position: relative;
  width:15%;
  height:70%;
  display: flex;
  align-items: center;
}
.icon_carts image{
  width:70rpx;
  height:70rpx;
}
.icon_carts view{
  background-color: #ff7100;
  border-radius: 50%;
  color:#ffffff;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 0;
  margin-left: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn_group{
  position:relative;
  width:80%;
  height:70%;
  display: flex;
  align-items: center;
}
.btn_group_item{
  position:relative;
  width:50%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 1rpx;
  /* border:1px solid #ff7100; */
}
.btn_addcart{
  color: #333333;
}
.btn_buy{
  background-color: #5b9df3;
  color: #ffffff;
  height: 80%;
  border-radius: 10rpx;
}
