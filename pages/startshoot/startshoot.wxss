.page{
  position:absolute;
  width:100%;
  height: 100%;
  left:0;
  top:0;
}

.info_area{
  position:absolute;
  left:0;
  top:30%;
  /* background: rgba(255,255,255,.5); */
  /* background: #ffffff; */
  width:100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
.info_area cover-image{
  position:relative;
  width:400rpx;
  height:400rpx;
}

.placearea{
  position:absolute;
  top:0;
  left:0;
  color: #ffffff;
  background: rgba(0,0,0,.5);
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
}





.btn_area{
  position:absolute;
  bottom: 50rpx;
  width:100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn_area cover-image{
  position:relative;
  width: 400rpx;
  height: 80rpx;
}
.btn_area cover-view{
  position:absolute;
  letter-spacing: 2rpx;
  font-size: 0.9rem;
  color: #ffffff;
}